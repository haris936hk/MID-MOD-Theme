

<div
  class="social-icons__wrapper"
  {{ block.shopify_attributes }}
>
  {% content_for 'blocks' %}
</div>

{% stylesheet %}
  .social-icons__wrapper {
    display: flex;
    gap: var(--gap-sm);
    flex-wrap: wrap;
    justify-content: center;

    @media screen and (min-width: 750px) {
      flex-wrap: nowrap;
      justify-content: flex-end;
    }
  }

  /* Bottom section social icons positioning */
  .section-wrapper[class*="footer"] .social-icons__wrapper {
    justify-content: flex-end;
  }

  @media screen and (max-width: 749px) {
    .section-wrapper[class*="footer"] .social-icons__wrapper {
      justify-content: center;
    }
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:names.social_media_links",
  "tag": null,
  "blocks": [
    {
      "type": "_social-link"
    }
  ]
}
{% endschema %}
